{
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "./src/",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "./dist/",
        "moduleResolution": "node",
        "types": [
            "node",
            "cors",
            "express",
            "dplayer",
            "lokijs"
        ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}
